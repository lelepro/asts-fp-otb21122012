@{
    ViewBag.Title = "Trang chủ";
	ViewBag.TitleBar = "Đặt vé máy bay";
}
@section head
{
	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/jqueryui")
	@Styles.Render("~/Content/themes/base/css")
}
<h1 >Chọn địa điểm</h1>
<form action="">
	<table style="width: 50%;">
		<tr>
			<td>
				<input id="rdb_roundtrip" name="direction" value="returntravel" type="radio" /> 
				<label for="rdb_roundtrip">Khứ hồi</label>
			</td>
			<td>
				<input id="rdb_oneway" type="radio" name="direction" value="onewaytravel" />
				<label for="rdb_oneway">Một chiều</label>
			</td>
			<td>
				<input id="rdb_multidest" type="radio" name="direction" value="multidesttravel" disabled="true"/> 
				<label for="rdb_multidest">Nhiều chặng</label> 
			</td>
		</tr>
	</table>
	<hr />
	<table style="width: 100%;">
		<tr>
			<td>
				Điểm đi
			</td>
			<td>
				@Html.JQueryUI().Autocomplete("departcity", Url.Action("SearchCity"))
			</td>
			<td>
				Điểm về
			</td>
			<td>
				@Html.JQueryUI().Autocomplete("returncity", Url.Action("SearchCity"))
			</td>
		</tr>
		<tr>
			<td>
				<label for="departday">Ngày đi</label>
			</td>
			<td>
				@Html.JQueryUI().Datepicker("departday")
			</td>
			<td>
				<label for="returnday">Ngày về</label>
			</td>
			<td>
				@Html.JQueryUI().Datepicker("returnday")
			</td>
		</tr>
	</table>
	<hr/>
	Số lượng người
	<table style="width: 100%;">
		<tr>
			<td>
				Người lớn
			</td>
			<td>
				Trẻ em (2-12 tuổi)
			</td>
			<td>
				Trẻ em (dưới 2 tuổi)
			</td>
		</tr>
		<tr>
			<td>
				&nbsp;
			</td>
			<td>
				&nbsp;
			</td>
			<td>
				&nbsp;
			</td>
		</tr>
	</table>
</form>
