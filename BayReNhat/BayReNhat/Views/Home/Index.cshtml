@{
    ViewBag.Title = "Trang chủ";
	ViewBag.TitleBar = "Tìm kiếm vé máy bay";
}
@section Scripts
{
	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/jqueryui")
	@Styles.Render("~/Content/themes/base/css")
    <script src="../../Scripts/index.js" type="text/javascript"></script>
}
<form>
	<h2>Loại chuyến bay</h2>
	<table style="width: 50%;">
		<tr>
			<td>
				<input id="rdb_roundtrip" name="direction" value="returntravel" type="radio" /> 
				<label for="rdb_roundtrip">Khứ hồi</label>
			</td>
			<td>
				<input id="rdb_oneway" type="radio" name="direction" value="onewaytravel" />
				<label for="rdb_oneway">Một chiều</label>
			</td>
			<td>
				<input id="rdb_multidest" type="radio" name="direction" value="multidesttravel" disabled="true"/> 
				<label for="rdb_multidest">Nhiều chặng</label> 
			</td>
		</tr>
	</table>
	<hr />
	<h2>Thời gian và địa điểm</h2>
	<table style="width: 100%;">
		<tr>
			<td>
				Điểm đi
			</td>
			<td>
				<input type="text" id="departcity" readonly=true class="textbox"/>
			</td>
			<td>
				Điểm về
			</td>
			<td>
				<input type="text" id="returncity" readonly=true/>
			</td>
		</tr>
		<tr>
			<td>
				<label for="departday">Ngày đi</label>
			</td>
			<td>
				<input type="text" id="departday"/>
			</td>
			<td>
				<label for="returnday">Ngày về</label>
			</td>
			<td>
				<input type="text" id="returnday"/>
			</td>
		</tr>
	</table>
	<hr/>
	<h2>Số lượng người</h2>
	<table style="width: 100%;">
		<tr>
			<td style="width: 20%">
				Người lớn
			</td>
			<td style="width: 20%">
				Trẻ em (2-12 tuổi)
			</td>
			<td>
				Trẻ em (dưới 2 tuổi)
			</td>
		</tr>
		<tr>
			<td>
				<select id="noadult">
					<option value="1">1</option>
					<option value="1">2</option>
					<option value="1">3</option>
					<option value="1">4</option>
					<option value="1">5</option>
					<option value="1">6</option>
				</select>
			</td>
			<td>
				<select id="nochildren">
					<option value="0">0</option>
					<option value="1">1</option>
					<option value="1">2</option>
					<option value="1">3</option>
				</select>
			</td>
			<td>
				<select id="noinfant">
					<option value="0">0</option>
					<option value="1">1</option>
					<option value="1">2</option>
				</select>
			</td>
		</tr>
	</table>
	<div class="space"></div>
	<input id="search" type="submit" value="Tìm kiếm" class="button"/>
</form>

@Html.Partial("CityDlgPartial")